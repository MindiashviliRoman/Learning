<Window x:Class="WpfSqlAny.Windows.DataTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSqlAny.Windows"
        mc:Ignorable="d"
        Title="DataTableWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid
            x:Name ="TableDataGrid" Grid.Row="0"
        />
        <Button Grid.Row="1" Content="Accept" Width="150" MaxWidth="150" MinWidth="100" Margin="10, 10" Click="Accept_OnClick"/>
    </Grid>
</Window>
