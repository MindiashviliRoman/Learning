<Window x:Class="WpfSqlAny.Windows.CreatingTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSqlAny.Windows"
        mc:Ignorable="d"
        Title="CreatingTableWindow" Height="250" Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" >
            <TextBlock Text = "Insert name of new table" Background ="AliceBlue" TextAlignment="Center"/>
        </StackPanel>
        <TextBox Grid.Row="1" x:Name= "TabName" TextWrapping="Wrap" Text="NewName" Height="25" TextAlignment="Center"/>
        <Button Grid.Row="2" Content="Accept" Height="25" Width="50" Click ="OnAccept_Click"/>
    </Grid>
</Window>
